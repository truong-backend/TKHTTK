<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <!-- Sequence for Employee Code -->
        <record id="seq_hr_employee" model="ir.sequence">
            <field name="name">Employee Code Sequence</field>
            <field name="code">hr.employee</field>
            <field name="prefix">EMP</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        
        <!-- Initial Skills -->
        <record id="skill_python_programming" model="hr.skills">
            <field name="name">Python Programming</field>
            <field name="description">Advanced Python programming skills</field>
            <field name="skill_category">technical</field>
        </record>
        
        <record id="skill_project_management" model="hr.skills">
            <field name="name">Project Management</field>
            <field name="description">Ability to manage complex projects</field>
            <field name="skill_category">soft</field>
        </record>
        
        <record id="skill_english_communication" model="hr.skills">
            <field name="name">English Communication</field>
            <field name="description">Advanced English communication skills</field>
            <field name="skill_category">language</field>
        </record>
    </data>
</openerp>